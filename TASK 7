using System;
using System.Collections.Generic;
using System.Text;
using System.Threading.Tasks;
using System.Linq;

namespace linqhomework7
{
    class Program
    {
        static void Main(string[] args)
        {
            Database database = new Database();
            database.TransferSoldier();
        }
    }

    class Database
    {
        private List<Soldier> _eleteSquad = new List<Soldier>
        {
            new Soldier("Андрей"),
            new Soldier("Назар"),
            new Soldier("Богдан"),
            new Soldier("Джон"),
            new Soldier("Борис"),
        };
        private List<Soldier> _commonSquad = new List<Soldier>();

        public void TransferSoldier()
        {
            var commonSoldiers = _commonSquad.Union(_eleteSquad.Where(soldier => soldier.Name.StartsWith("Б"))).ToList();
            var eliteSoldiers = _eleteSquad.Where(soldier => soldier.Name.StartsWith("Б") == false).ToList();
            _eleteSquad = eliteSoldiers;
            _commonSquad = commonSoldiers;

            Console.WriteLine("крутой отряд покинули все солдаты у кого имя начинается на букву Б:");
            foreach (var soldier in _commonSquad)
            {
                soldier.ShowInfo();
            }
        }
    }
    class Soldier
    {
        public string Name { get; }

        public Soldier(string name)
        {
            Name = name;
        }

        public void ShowInfo()
        {
            Console.WriteLine(Name);
        }
    }
}
